{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Core Launch (Server)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/Blog_react.Server/bin/Debug/net8.0/Blog_react.Server.dll",
      "args": [],
      "cwd": "${workspaceFolder}/Blog_react.Server",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": "Launch React Client",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/blog_react.client",
      "sourceMaps": true,
      "preLaunchTask": "npm: start",
      "postDebugTask": "npm: stop"
    }
  ]
}